{% extends 'base.html.twig' %}

{% block title %}{{ category.title }}
  - Niveau
  {{ questionnaire.difficulty }}
{% endblock %}

{% block body %}
  <h1>{{ category.title }}
    - Niveau
    {{ questionnaire.difficulty }}</h1>
  <img class="mb-4" src="{{ asset('img/' ~ category.image) }}" alt="{{ category.title }}">
  <a href="{{ path('app_quizz_start', {slug: category.slug, difficulty: questionnaire.difficulty, number: 1}) }}" class="btn btn-primary">Commencer</a>
{% endblock %}
